#!/usr/bin/env ruby

require_relative '../config/environment'

def start
  puts "Welcome to Tic Tac Toe!"
  game = Game.new
  until game.won?
    game.play
  end
end

def new_game?
  if game.over?
    puts "Play again? (y/n)"
    again = gets.strip
      if again.downcase == "y"
        start
      elsif again.downcase == "n"
        puts "Good game!"
      else
        puts "Error"
        new_game?
      end 
      
    end
end