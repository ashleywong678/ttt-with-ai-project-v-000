#!/usr/bin/env ruby

require_relative '../config/environment'

def start
  puts "Welcome to Tic Tac Toe!"
  game = Game.new
  until game.won?
    game.play
  end
end

if game.over?
  puts "Play again? Type y for yes, n for no."
  again = gets.strip
    if again == "y"
      start
    else
      puts "Good game!"
    end
end